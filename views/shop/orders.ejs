<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders  ">
                    <% orders.forEach(order => { %>
                        <li class="orders__item has-shadow has-background-info p-3 m-2">
                            <h1 class="has-text-black is-size-4">Order - # <%= order._id %></h1>
                            <ul class="orders__products">
                                <% order.products.forEach(product => { %>
                                    <li class="orders__products-item has-text-black is-size-4">Product - <%= product.product.title %> (<%= product.quantity %>)</li>
                                    
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>